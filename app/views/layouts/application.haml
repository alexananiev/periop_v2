      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    %div{"ng-app" => "periop", "ng-controller" => "ApplicationController"}
      = yield
